@model HangoutSpot

<h3>Create Hangout spot</h3>
<br />
<form method="post" asp-action="CreateHangoutSpot">
	<div class="text-danger" asp-validation-summary=ModelOnly></div>
	<div class="mb-3 row">
		<div class="col-2">
			<label asp-for="Name" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<input type="text" asp-for="Name" class="form-control" />
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="Name"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label asp-for="CategoryId" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="CategoryId"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<label asp-for="TownPartId" class="col-form-label"></label>
		</div>
		<div class="col-6">
			<select asp-for="TownPartId" asp-items="ViewBag.TownParts" class="form-control"></select>
		</div>
		<div class="col">
			<span class="text-danger" asp-validation-for="TownPartId"></span>
		</div>
	</div>
	<div class="mb-3 row">
		<div class="col-2">
			<input type="submit" class="btn btn-primary" value="Submit" />
		</div>
		<div class="col-6">
		</div>
	</div>
</form>